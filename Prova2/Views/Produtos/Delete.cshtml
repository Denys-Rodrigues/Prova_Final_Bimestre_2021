@model Prova2.Models.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Apagar Produto";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do Produto a ser Removido
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Nome, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Descricao, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Produto"
                   class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null,
           new { @class = "btn btn-info" })
        }
    </div>
</div>

@section ScriptPage{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active")
        });
    </script>
}



